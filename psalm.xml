<?xml version="1.0"?>
<psalm
    errorLevel="1"
    findUnusedCode="true"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
>
    <projectFiles>
        <directory name="src" />
        <file name="qb-healthcare.php" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <PossiblyUnusedMethod>
            <errorLevel type="suppress">
                <file name="src/Entity/Payer.php" />
                <referencedMethod name="*::bsonSerialize" />
                <referencedMethod name="*::bsonUnserialize" />
                <referencedMethod name="*::__construct" />
            </errorLevel>
        </PossiblyUnusedMethod>
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="src/Command/" />
            </errorLevel>
        </UnusedClass>
        <UndefinedDocblockClass>
            <errorLevel type="suppress">
                <file name="src/Command/AuthenticateCommand.php" />
            </errorLevel>
        </UndefinedDocblockClass>
    </issueHandlers>
</psalm>
